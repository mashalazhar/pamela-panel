<div class="container">
  <h2>Cohorts</h2>          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Instructor</th>
        <th>Course</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
    
      <tr>
      <% @cohorts.each do |x| %>
        <td><%= x.name %></td>
        <td><%= x.start_date %></td>
        <td><%= x.end_date %></td>
        <td><%= Instructor.find(x.instructor_id).first_name %> <%= Instructor.find(x.instructor_id).last_name %></td>
        <td><%= Course.find(x.course_id).name %></td>
        <td><%= link_to 'Edit', edit_cohort_path(x), remote:true %></td>
        <td><%= link_to 'Delete', cohort_path(x), method: :delete, remote:true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <div id='edit-<%= x.id%>'></div>
      <% end %>
    </tbody>
  </table>
</div>



