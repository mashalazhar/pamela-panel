<div class="container">
  <h2>Cohorts</h2>          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Instructor</th>
        <th>Course</th>
      </tr>
    </thead>
    <tbody>
    
      <tr>
      <% @cohorts.each do |x| %>
        <td><%= x.name %></td>
        <td><%= x.start_date %></td>
        <td><%= x.end_date %></td>
        <td><%= Instructor.find(x.instructor_id).first_name %></td>
        <td><%= Course.find(x.course_id).name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

