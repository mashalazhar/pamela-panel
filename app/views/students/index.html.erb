<div class="container">
<h2>Students</h2>          
<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Education</th>
      <th>Cohort ID</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  
    <tr>
    <% @students.each do |x| %>
      <td><%= x.first_name %></td>
      <td><%= x.last_name %></td>
      <td><%= x.age %></td>
      <td><%= x.education %></td>
      <td><%= Cohort.find(x.cohort_id).name %></td>
      <td><%= link_to 'Edit', edit_student_path(x), remote:true %></td>
      <td><%= link_to 'Delete', student_path(x), method: :delete, remote:true, data: { confirm: 'You cannot undo this action. Are you sure you want to delete?' } %></td>
    </tr>
    <div id='edit-<%= x.id%>'></div>
    <% end %>
  </tbody>
</table>
<ol><%= link_to "Enroll Student", new_student_path, class: "btn btn-default" %></ol>
<br>
</div>
