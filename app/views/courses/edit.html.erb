<%= form_for @course do |f| %>  
    <%= f.label :name %>  
    <%= f.text_field :name, value: @course.name %>  
    <%= f.label :total_hours %>  
    <%= f.number_field :total_hours, value: @course.total_hours %>
    <%= f.submit %>
<% end %>

<p>

<%= link_to 'Edit', edit_course_path(@course), remote: true %> 
<%= link_to 'Delete', course_path(@course), method: :delete %> 